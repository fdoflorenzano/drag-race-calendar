---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Historical weekly timeline of all Drag Race seasons." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --font-size: clamp(1.2rem, 0.9109rem + 1.4457vi, 2.0313rem);

    --col-width: clamp(1.5rem, 0.7174rem + 3.913vi, 3.75rem);
    --gap: clamp(1rem, 0.4783rem + 2.6087vi, 2.5rem);

    --color-background: #1f2232;
    --color-streak: #da4167;
    --color-general-streak: #fa9f42;
    --color-text: #f0eff4;
    --color-border: rgba(240, 239, 244, 0.1);
  }

  * {
    min-width: 0;
    font: inherit;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  body {
    margin: 0;
    min-height: 100vh;
    min-height: 100svh;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    text-wrap: balance;
  }

  p {
    text-wrap: pretty;
  }

  html {
    font-size: var(--font-size);
    color: var(--color-text);
    font-family: system-ui, sans-serif;
    font-weight: lighter;
    background: var(--color-background);
  }
</style>
